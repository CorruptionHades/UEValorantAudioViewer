<UserControl x:Class="UEValorantAudioViewer.AudioBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UEValorantAudioViewer"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <!-- We replace the StackPanel with a Grid to control the layout better -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <!-- Row 0: For the search box. Takes only the height it needs. -->
                <RowDefinition Height="Auto"/>
                <!-- Row 1: For the ListBox. Takes all remaining available space. -->
                <RowDefinition Height="*"/>
                <!-- Row 2: For the button. Takes only the height it needs. -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- SearchBox is in the top row -->
            <TextBox Grid.Row="0" x:Name="SearchBox" Margin="5" TextChanged="SearchBox_TextChanged"/>

            <!-- AudioList is in the middle row. It will now scroll when its content is too large. -->
            <ListBox Grid.Row="1" x:Name="AudioList" Margin="5,0,5,5" SelectionMode="Extended" SelectionChanged="AudioList_SelectionChanged"/>

            <!-- Button is in the bottom row, always visible. -->
            <Button Grid.Row="2" Content="Extract Selected" Margin="5" Click="Extract_Click"/>
        </Grid>

        <!-- Right Panel (Unchanged) -->
        <Border Grid.Column="1" Margin="10" BorderBrush="#444" BorderThickness="1" Padding="10">
            <StackPanel>
                <TextBlock Text="Details" FontSize="18" Margin="0 0 0 10"/>
                <TextBlock x:Name="DetailName"/>
                <TextBlock x:Name="DetailNumber"/>
                <TextBlock x:Name="DetailUAsset"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
